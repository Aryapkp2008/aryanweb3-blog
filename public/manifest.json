{
  "name": "Web3 Insights Blog",
  "short_name": "Web3 Blog",
  "description": "Your gateway to understanding Ethereum, DeFi, NFTs, and the decentralized future of the internet.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#8b5cf6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["education", "finance", "technology"],
  "screenshots": [
    {
      "src": "/screenshots/desktop-screenshot.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Web3 Insights Blog Desktop View"
    },
    {
      "src": "/screenshots/mobile-screenshot.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Web3 Insights Blog Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "Latest Posts",
      "short_name": "Latest",
      "description": "View the latest blog posts",
      "url": "/blog"
    },
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search through blog posts",
      "url": "/blog?search=true"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+web3blog",
      "url": "/blog/%s"
    }
  ]
}
